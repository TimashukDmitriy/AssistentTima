<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AssistantTima.App"
             xmlns:local="using:AssistantTima"
             xmlns:fluentAvalonia="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  
    <Application.Styles>
        <fluentAvalonia:FluentAvaloniaTheme UseSystemFontOnWindows="True" PreferSystemTheme="True"/>
    </Application.Styles>
</Application>