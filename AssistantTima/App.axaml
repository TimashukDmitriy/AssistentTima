<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="AssistantTima.App"
             xmlns:local="using:AssistantTima"
             xmlns:fluentAvalonia="using:FluentAvalonia.Styling"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
             
    <Application.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <MergeResourceInclude Source="Resources/Svg.axaml"/>
                <MergeResourceInclude Source="Resources/Colours.axaml"/>
                <MergeResourceInclude Source="Resources/SvgDictionary.axaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
  
    <Application.Styles>
        <fluentAvalonia:FluentAvaloniaTheme UseSystemFontOnWindows="True" PreferSystemTheme="True"/>
        <StyleInclude Source="Styles/Button.axaml"/>
    </Application.Styles>
</Application>